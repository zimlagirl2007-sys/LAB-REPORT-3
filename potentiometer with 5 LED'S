int sensorPin = A0; // define the pin
int sensorValue = 0; // define the pin

void setup() { 
  // put your setup code here, to run once: 
  Serial.begin(9600); 

pinMode(11,OUTPUT); // set pin 11 as an output
pinMode(10,OUTPUT); // set pin 10 as an output
pinMode(9,OUTPUT); // set pin 9 as an output
pinMode(6,OUTPUT); // set pin 6 as an output
pinMode(5,OUTPUT); // set pin 5 as an output

} 

void loop() { 
  // put your main code here, to run repeatedly: 
sensorValue = analogRead(sensorPin); // read the value of the potentiometer trough analog read

/*digitalWrite(11, 0); // set the led on pin 11 off
digitalWrite(10, 0); // set the led on pin 10 off
digitalWrite(9, 0); // set the led on pin 9 off
digitalWrite(6, 0); // set the led on pin 6 off
digitalWrite(5, 0);*/ // set the led on pin 5 off

if (sensorValue > 200) { //if the value of the potentiometer is more than 200, do the following commands
  digitalWrite(11, 1); // turn the LED connected to pin 11 on
  digitalWrite(10, 0); // turn the LED connected to pin 10 off
  digitalWrite(9, 0); // turn the LED connected to pin 9 off
  digitalWrite(6, 0); // turn the LED connected to pin 6 off
  digitalWrite(5, 0); // turn the LED connected to pin 5 off
} 

    if (sensorValue > 400) { // if the value of the potentiometer is more than 400, do the following commands
      digitalWrite(11, 1); // turn the LED connected to pin 11 on
      digitalWrite(10, 1); // turn the LED connected to pin 10 on
      digitalWrite(9, 0); // turn the LED connected to pin 9 off
      digitalWrite(6, 0); // turn the LED connected to pin 6 off
      digitalWrite(5, 0); // turn the LED connected to pin 5 off
    }

      if (sensorValue > 600) { // if the value of the potentiometer is more than 600, do the following commands
        digitalWrite(11, 1); // turn the LED connected to pin 11 on
        digitalWrite(10, 1); // turn the LED connected to pin 10 on
        digitalWrite(9, 1); // turn the LED connected to pin 9 on
        digitalWrite(6, 0); // turn the LED connected to pin 6 off
        digitalWrite(5, 0); // turn the LED connected to pin 5 off
      } 

        if (sensorValue > 800) { // if the value of the potentiometer is more than 800, do the following commands
          digitalWrite(11,1); // turn the LED connected to pin 11 on
          digitalWrite(10, 1); // turn the LED connected to pin 10 on
          digitalWrite(9, 1); // turn the LED connected to pin 9 on
          digitalWrite(6, 1); // turn the LED connected to pin 6 on
          digitalWrite(5, 0); // turn the LED connected to pin 5 off
        } 

          if (sensorValue > 1000) { // if the value of the potentiometer is more than 1000, do the following commands
            digitalWrite(11,1); // turn the LED connected to pin 11 on
            digitalWrite(10, 1);// turn the LED connected to pin 10 on
            digitalWrite(9, 1); // turn the LED connected to pin 9 on
            digitalWrite(6, 1); // turn the LED connected to pin 6 on
            digitalWrite(5, 1); // turn the LED connected to pin 5 on
          } 
Serial.println(sensorValue); // display the value of the potentiometer on the serial monitor
} 
