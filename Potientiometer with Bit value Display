void setup() { 

  // initialize serial communication at 9600 bits per second: 
  Serial.begin(9600); 
} 

// the loop routine runs over and over again forever: 
void loop() { 
  // read the input on analog pin 0: 
  int sensorValue = analogRead(A0); 

  // Convert the analog reading (which goes from 0 - 1023) to a voltage (0 - 5V): 
  float voltage = sensorValue * (5.0 / 1023.0); // calculations to find the value of the voltage
  float bitvalue = voltage / (5.0 / 1023.0);  // calculation to find the value of the bitvalue

  // print out the value you read: 
  Serial.print("bitvalue = "); // display "bitvalue = " on the serial monitor
  Serial.println(bitvalue); // display the bitvalue value on the serial monitor
  delay(1); // a delay between readings
} 
